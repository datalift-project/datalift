#load_core_resources
#load("interlink/resources")
##
#set( $moduleUri = "$baseUri/interlink")
##
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>#i18n('interlink.title') - Datalift</title>
	#css_links
	## Temporary link for dev. purposes.
	## <link rel="stylesheet" type="text/css" href="http://localhost:1337/static/css/interlink-interface.css"/>
	<link rel="stylesheet" type="text/css" href="${moduleUri}/static/css/interlink-interface.css"/>
</head>
<body>
	#banner
	<div class="ui-widget-content" id="workspace">
		<h3 class="ui-widget-header dl-widget-header">#i18n('project.label' ${it.title}) &mdash; #i18n('interlink.title')</h3>
		<div class="dl-panel error-display">
			<h4>#i18n('error.title')</h4>
			## Temporary link for dev. purposes.
			## <img src="http://localhost:1337/static/images/cogs-error.png" alt="Cogs" width="363" height="87"/>
			<img src="${moduleUri}/static/images/cogs-error.png" alt="Cogs" width="363" height="87"/>
			<ul class="ui-widget-content ui-state-error dl-panel medium ui-corner-all">
			  	#foreach( $elt in $errormessages ) 
			  		<li><span class="ui-icon ui-icon-alert"></span><span class="error-label">#i18n('error.label') </span> $!esc.html($elt)</li> 
			  	#end
			</ul>
			<div class="multiple-choices dl-form-elt form-stack">
				<a href="${moduleUri}?project=${it.uri}" class="ui-priority-primary" title="#i18n('back.title')" tabindex="1">#i18n('back.label')</a>
				<a href="${baseUri}/project/${it.title}" class="ui-priority-secondary" title="#i18n('cancel.title')#i18n('project.workspace.link')" tabindex="2">#i18n('project.workspace.link')</a>
			</div>
		</div>
	</div>
	#footer
	#script_links
	<script type="text/javascript">
	</script>
	## Temporary link for dev. purposes.
	## <script type="text/javascript" src="http://localhost:1337/static/js/interlink-error.js"></script>
	<script language="javascript" src="${moduleUri}/static/js/interlink-error.js"></script>
</body>
</html>
