              <pre id="sgvzlr_cPrefix"></pre>
              
              <textarea id="sgvzlr_cQuery" rows="10" cols="180"></textarea>
              
              <form method="get" id="sgvzlr_formQuery" action="${moduleUri}/visu-sgvizler?project=$esc.url($it.uri)">
	            
