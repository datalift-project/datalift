	function loadGridOntologies() {
		/* Ontologies */
		jQuery("#selectable_ontologies").jqGrid({
			datatype: "local",
			colNames:['#i18n("project.p_uri")','#i18n("project.p_title")','#i18n("project.p_source")',"#i18n("project.p_dateSubmitted")", '#i18n("project.p_operator")'],
