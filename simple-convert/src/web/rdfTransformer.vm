<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
#load("rdftransformer/resources")
#load_core_resources
	<title>#i18n("rdftransformer.title") - DataLift</title>
#css_links
</head>
<body>
#banner
<div class="ui-widget-content" id="workspace">
	<h3 class="ui-widget-header dl-widget-header">#i18n("rdftransformer.title") - #i18n("project.label") ${it.title}</h3>

	<form id="converter_form" method="get" action="${baseUri}/rdftransformer">
		<input type="hidden" name="project" id="project" value="${it.uri}"/>
		<p><label for="source">#i18n("source.to_convert"):</label>
		<select id="source">
#foreach( $curSrc in $it.getSources() )
	#if( $converter.canHandle($curSrc) )
			<option value="${curSrc.uri}" name="${curSrc.title}">$esc.html($curSrc.title)</option>
	#end
#end
		</select></p>

		<input type="submit" id="source_submit" value="#i18n('submit.label')"/>
	</form>
</div>

#script_links
<script type="text/javascript">
	$(function() {
		$("#source_submit").button();
		$("#source_submit").attr('disabled', true);

		$("#source").change(function() {
			$("#source option:selected").each(function () {
				if ($(this).attr("value") == "") {
					$("#source_submit").attr('disabled', true);
				}
				else {
					$("#source_submit").removeAttr('disabled');
				}
			});
		});
		$("#source").change();
	});
</script>
</body>
</html>
