<?xml version="1.0" encoding="UTF-8"?>

<configuration xmlns="http://jakarta.apache.org/log4j/">

  <!-- ===== Appenders ===== -->
  <!-- Default appender: log file -->
  <appender name="defaultLog" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="${datalift.log.path}/datalift.log"/>
    <param name="maxFileSize"    value="100KB"/>
    <param name="maxBackupIndex" value="9"/>

    <layout class="org.apache.log4j.PatternLayout">
      <param name="conversionPattern"
             value="%d{ISO8601}|%-5p|%X{Timer}|%X{Path}|%c{1}|%m%n"/>
    </layout>
  </appender>

  <!-- ===== Loggers ===== -->
  <!-- Datalift framework and modules -->
  <logger name="org.datalift">
    <level value="info"/>
  </logger>

  <!-- Jersey & JAX-RS -->
  <logger name="javax.ws.rs">
    <level value="info"/>
  </logger>
  <logger name="com.sun.jersey">
    <level value="warn"/>
  </logger>
  <!-- Sesame Client API -->
  <logger name="org.apache.commons.httpclient">
    <level value="warn"/>
  </logger>
  <!-- Apache Velocity template engine (and view processor) -->
  <logger name="org.apache.velocity">
    <level value="warn"/>
  </logger>
  <logger name="org.datalift.core.velocity.jersey">
    <level value="info"/>
  </logger>
  <!-- Apache Shiro security framework (and integration classes) -->
  <logger name="org.apache.shiro">
    <level value="warn"/>
  </logger>
  <logger name="org.datalift.core.security">
    <level value="warn"/>
  </logger>
  <!-- Empire RDF JPA provider -->
  <logger name="com.clarkparsia.empire">
    <level value="info"/>
  </logger>
  <!-- Web Resource (CSS & JS) Optimizer filter -->
  <logger name="ro.isdc.wro">
    <level value="warn"/>
  </logger>

</configuration>
